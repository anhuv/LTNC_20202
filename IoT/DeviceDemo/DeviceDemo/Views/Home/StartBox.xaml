<UserControl x:Class="DeviceDemo.Views.Home.StartBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeviceDemo.Views.Home"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border Height="60" Width="300" Padding="5 5 0 0" CornerRadius="8" Background="#fff" BorderThickness="1" BorderBrush="LightGray">
                <TextBox x:Name="deviceId" Height="40" FontSize="22" BorderThickness="0" Text="LTNC0005" />
            </Border>
            <Button x:Name="btnStart" Content="START" FontSize="20" Padding="8" Margin="0 20 0 0" Click="btnStart_Click">
                
            </Button>
        </StackPanel>

    </Grid>
</UserControl>
